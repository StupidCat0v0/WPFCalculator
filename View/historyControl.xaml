<UserControl x:Class="calculator.View.historyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:calculator.View"
             mc:Ignorable="d" Height="52" Margin="0">
    <Border CornerRadius="8" Name="content" Background="Transparent" Margin="6,5">
        <Grid>
            <TextBox Background="Transparent" BorderThickness="0" Text="0"  IsHitTestVisible="False"
                    Foreground="#A6A6A6" TextAlignment="Right" VerticalContentAlignment= "Center"
                    FontSize="14" FontWeight="Thin" Margin="0,0,10,20" FontFamily="微软雅黑" Name="rnum"/>
            <TextBox Background="Transparent" IsHitTestVisible="False" BorderThickness="0" Text="0" 
                    Foreground="White" TextAlignment="Right" VerticalContentAlignment= "Center"
                    FontSize="19" Margin="0,18,10,0" Name="mnum"/>
        </Grid>
    </Border>
</UserControl>
